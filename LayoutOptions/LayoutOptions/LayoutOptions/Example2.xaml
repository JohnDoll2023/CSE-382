<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutOptions.Example2">
    <ContentPage.Content>
        <StackLayout>
            <Frame HeightRequest="300" BorderColor="Red">
                <StackLayout Orientation="Vertical" HeightRequest="100">
                    <Button Text="B1" VerticalOptions="CenterAndExpand"/>
                </StackLayout>
            </Frame>
            <Frame HeightRequest="300" BorderColor="Red">
                <StackLayout Orientation="Vertical" HeightRequest="200">
                    <Button Text="B1"/>
                    <Button Text="B2"/>
                    <Button Text="B3" VerticalOptions="FillAndExpand" />
                    <Button Text="B4" HeightRequest="40" VerticalOptions="EndAndExpand" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content></ContentPage>