<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DBIntro.MainPage">

    <StackLayout Padding="0,40,0,0" >
        <Button Text="Add user" Clicked="Button_Clicked"/>
        <Entry x:Name="name"/>
        <ListView x:Name="lv"/>
        <StackLayout HeightRequest="600">
            <Entry x:Name="person" Text="Name"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="DOB:"/>
                <DatePicker x:Name="date"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="SSN:"/>
                <Entry Text="123456789" x:Name="ssn"/>
            </StackLayout>
            <Button Text="Add person" Clicked="Button_Clicked_1"/>
            <ListView x:Name="personLV"/>
        </StackLayout>
    </StackLayout>

</ContentPage>